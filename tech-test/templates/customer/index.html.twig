{% extends 'base.html.twig' %}

{% block title %}Customer index{% endblock %}

{% block body %}
    <button class="return"><a href="{{ path('app_home') }}">Retour</a></button>
    <h1>Liste Client</h1>

    <table class="table1">
        <thead>
            <tr>
                <th>N°</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Date d'anniversaire</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td>{{ customer.id }}</td>
                <td>{{ customer.firstName }}</td>
                <td>{{ customer.lastName }}</td>
                <td>{{ customer.birthDate ? customer.birthDate|date('Y-m-d') : '' }}</td>
                <td>
                   <Button><a href="{{ path('customer_show', {'id': customer.id}) }}">Liste</a></Button>
                    <Button><a href="{{ path('customer_edit', {'id': customer.id}) }}">Editer</a></Button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

   <button><a href="{{ path('customer_new') }}">Nouveau client</a></button>
{% endblock %}
